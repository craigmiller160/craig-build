{
  "name": "@craigmiller160/craig-build",
  "version": "2.6.0-beta.1",
  "author": "craigmiller160",
  "bin": {
    "craig-build": "build/index.js"
  },
  "publishConfig": {
    "registry": "https://nexus.craigmiller160.us/repository/npm-private/"
  },
  "files": [
    "build",
    "libScripts"
  ],
  "scripts": {
    "lint": "eslint . --fix --max-warnings=0",
    "forceBuild": "rm -rf ./build && swc ./src -d ./build --config-file ./.swcrc",
    "typeCheck": "tsc --noEmit --project ./test/tsconfig.json",
    "test": "vitest run",
    "build": "npm run validate && npm run forceBuild",
    "validate": "npm run typeCheck && npm run lint && npm run test",
    "prepare": "husky install",
    "install": "node libScripts/gradle-install.js"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix --max-warnings=0"
  },
  "devDependencies": {
    "@relmify/jest-fp-ts": "^2.1.1",
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.4.12",
    "@types/cross-spawn": "^6.0.2",
    "@types/node": "^20.12.5",
    "@types/qs": "^6.9.14",
    "@types/semver": "^7.5.8",
    "@types/tmp": "^0.2.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "axios-mock-adapter": "^1.19.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^7.0.4",
    "io-ts": "^2.2.21",
    "lint-staged": "^12.1.7",
    "prettier": "^3.2.5",
    "tmp": "^0.2.1",
    "typescript": "^5.4.4",
    "vitest": "^1.4.0"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "commander": "^7.1.0",
    "cross-spawn": "^7.0.3",
    "fp-ts": "^2.16.5",
    "nanoid": "^5.0.7",
    "qs": "^6.12.0",
    "semver": "^7.6.0",
    "shell-env": "^3.0.1",
    "sync-env": "^1.0.5",
    "ts-custom-error": "^3.2.0",
    "ts-pattern": "^5.1.1",
    "winston": "^3.3.3",
    "xml2js": "^0.6.2",
    "yaml": "^2.4.1"
  }
}
